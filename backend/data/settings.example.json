{
  "_comment": "Copy this file to settings.json and customise. API keys are masked in the UI.",
  "llm": {
    "provider": "ollama",
    "model": "llama3.2",
    "temperature": 0.7,
    "ollama_url": "http://localhost:11434"
  },
  "integrations": {
    "claude_mcp": {
      "enabled": false,
      "connection_type": "stdio",
      "stdio_path": "/Applications/Claude.app/Contents/Resources/mcp-server",
      "http_endpoint": "http://localhost:3000",
      "available_tools": ["github", "filesystem", "brave-search", "puppeteer"]
    },
    "vscode": {
      "enabled": true,
      "binary_path": "/usr/local/bin/code",
      "projects": {
        "ai-home-hub": {
          "path": "/Users/stepan/projects/ai-home-hub",
          "workspace": "/Users/stepan/projects/ai-home-hub/hub.code-workspace",
          "auto_tasks": []
        },
        "lean-rpg": {
          "path": "/Users/stepan/projects/lean-rpg",
          "workspace": "/Users/stepan/projects/lean-rpg/rpg.code-workspace",
          "auto_tasks": []
        }
      }
    },
    "antigravity": {
      "enabled": false,
      "api_endpoint": "http://localhost:8080",
      "api_key": "your-api-key-here",
      "workspace_root": "/Users/stepan/projects",
      "auto_sync_artifacts": true
    },
    "openclaw": {
      "enabled": true,
      "binary_path": "/usr/local/bin/openclaw"
    },
    "macos": {
      "enabled": true
    }
  },
  "filesystem": {
    "allowed_directories": [
      "/Users/stepan/projects",
      "/Users/stepan/Documents/work"
    ],
    "require_confirmation": ["delete"],
    "blacklist_patterns": [
      "*.env",
      "*.key",
      "*.pem",
      "**/node_modules",
      "**/.git",
      "**/secrets"
    ]
  },
  "notifications": {
    "enabled": false,
    "ntfy_url": "https://ntfy.sh",
    "topic": "ai-home-hub-YOUR_UNIQUE_TOPIC"
  },
  "agents": {
    "max_concurrent": 5,
    "timeout_minutes": 30
  },
  "system_prompts": {
    "general": "Jsi m콢j osobn칤 Mac Control Center AI asistent. Ovl치d치코 VS Code, Claude MCP, filesystem, git, Mac aplikace. Odpov칤d치코 캜esky, stru캜n캩. Preferuje코 akce p콏ed vysv캩tlen칤m.",
    "powerbi": "Jsi Power BI a DAX expert s p콏칤stupem k filesystemu. 캛te코 .pbix metadata, analyzuje코 DAX measures, navrhuje코 optimalizace. Ovl치d치코 VS Code pro editaci Power Query M skript콢.",
    "lean": "Jsi Lean/CI specialista s p콏칤stupem k projekt콢m a dokumentaci. Analyzuje코 procesy, navrhuje코 Kaizen akce, generuje코 VSM diagramy. Ovl치d치코 git pro verzov치n칤 process dokumentace."
  },
  "quick_actions": [
    {
      "id": "daily-standup",
      "name": "Daily Standup",
      "icon": "游늵",
      "steps": [
        {"service": "vscode", "action": "open_project", "params": {"project_key": "ai-home-hub"}},
        {"service": "git", "action": "pull", "params": {"repo_path": "/Users/stepan/projects/ai-home-hub"}},
        {"service": "macos", "action": "safari_open", "params": {"url": "https://github.com/Keksiczek"}}
      ]
    },
    {
      "id": "work-mode",
      "name": "Work Mode Start",
      "icon": "游눹",
      "steps": [
        {"service": "macos", "action": "volume_set", "params": {"level": 20}},
        {"service": "vscode", "action": "open_project", "params": {"project_key": "ai-home-hub"}},
        {"service": "macos", "action": "open_app", "params": {"app_name": "Slack"}}
      ]
    },
    {
      "id": "end-of-day",
      "name": "End of Day",
      "icon": "游깿",
      "steps": [
        {"service": "git", "action": "status", "params": {"repo_path": "/Users/stepan/projects/ai-home-hub"}},
        {"service": "macos", "action": "volume_set", "params": {"level": 0}},
        {"service": "macos", "action": "notification", "params": {"title": "Work Done!", "message": "Time to rest."}}
      ]
    }
  ]
}
